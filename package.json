{
  "name": "roomkit-project",
  "version": "1.0.0",
  "description": "RoomKit实时翻译系统 - Monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:server": "pnpm --filter websocket-server dev",
    "build": "pnpm --parallel build",
    "build:frontend": "pnpm --filter frontend build",
    "build:server": "pnpm --filter websocket-server build",
    "start": "pnpm --filter websocket-server start",
    "clean": "pnpm --parallel clean",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "pnpm": "^8.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
